<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView
		android:layout_weight="1"
		android:text="Digite o primeiro numero"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>
	<EditText
		android:layout_height="wrap_content"
		android:id="@+id/numero1"
		android:layout_width="fill_parent"></EditText>
	<TextView
		android:id="@+id/textView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Digite o segundo numero"></TextView>
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/numero2"></EditText>
	<Button
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/btsomar"
		android:text="Somar"></Button>
	<Button
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="Subtrair"
		android:id="@+id/btsubtrair"></Button>
	<Button
		android:layout_height="wrap_content"
		android:id="@+id/btmultiplicar"
		android:text="Multiplicar"
		android:layout_width="fill_parent"></Button>
	<Button
		android:layout_height="wrap_content"
		android:id="@+id/btdividir"
		android:text="Dividir"
		android:layout_width="fill_parent"></Button>
</LinearLayout>